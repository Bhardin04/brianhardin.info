{% extends "base.html" %}

{% block title %}{{ project.title }} - Brian Hardin{% endblock %}
{% block meta_title %}{{ project.title }} - Brian Hardin{% endblock %}
{% block meta_description %}{{ project.description }}{% if project.technologies %} - Built with {{ project.technologies[:3] | join(', ') }}{% if project.technologies | length > 3 %} and more{% endif %}{% endif %}.{% endblock %}
{% block meta_keywords %}{% if project.technologies %}{{ project.technologies | join(', ') }}, {% endif %}Brian Hardin, Python Developer{% endblock %}

{% block og_title %}{{ project.title }} - Brian Hardin{% endblock %}
{% block og_description %}{{ project.description }}{% endblock %}
{% block og_url %}https://brianhardin.info/projects/{{ project.id }}{% endblock %}
{% block canonical %}https://brianhardin.info/projects/{{ project.id }}{% endblock %}

{% block content %}
<!-- Project Hero Section -->
<section class="section-sm bg-gradient-to-br from-primary-50 via-white to-primary-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
    <div class="container">
        <!-- Back to Projects -->
        <div class="mb-8 slide-up">
            <a href="/projects" class="inline-flex items-center text-primary-600 hover:text-primary-800 dark:text-primary-400 dark:hover:text-primary-300 transition-colors">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                Back to Projects
            </a>
        </div>

        <!-- Project Header -->
        <div class="text-center mb-12 slide-up">
            <div class="inline-flex items-center px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 rounded-full text-sm font-medium mb-4 slide-up-delay-1">
                <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>
                </svg>
                {{ project.category.value.replace('_', ' ').title() }}
            </div>
            <h1 class="heading-hero text-gradient-primary slide-up-delay-2">
                {{ project.title }}
            </h1>
            <p class="body-large text-center max-w-3xl mx-auto slide-up-delay-3">
                {{ project.description }}
            </p>
            
            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center slide-up-delay-3">
                {% if project.github_url %}
                <a href="{{ project.github_url }}" target="_blank" 
                   class="btn-secondary-premium hover-lift">
                    <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                    </svg>
                    View Source Code
                </a>
                {% endif %}
                {% if project.demo_url %}
                <a href="{{ project.demo_url }}" target="_blank" 
                   class="btn-primary-premium hover-glow">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                    </svg>
                    Live Demo
                </a>
                {% endif %}
            </div>
            
            <!-- Brand Signature -->
            <div class="mt-8 flex justify-center slide-up-delay-3">
                <div class="flex items-center space-x-3 text-sm text-gray-500 dark:text-gray-400">
                    <img src="/static/images/brand/python-icon.svg" alt="Python" class="w-6 h-6 opacity-60">
                    <span>Crafted with Python expertise</span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Project Content -->
<section class="section-sm">
    <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <!-- Main Content -->
            <div class="lg:col-span-2">
                <!-- Project Image -->
                {% if project.image_url %}
                <div class="card p-0 mb-8 overflow-hidden hover:shadow-xl transition-all duration-300">
                    <div class="relative h-64 md:h-80 bg-gradient-to-br from-primary-50 to-primary-100 dark:from-gray-800 dark:to-gray-900">
                        <img src="{{ project.image_url }}" alt="{{ project.title }} Preview" class="w-full h-full object-cover">
                        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent"></div>
                        <div class="absolute bottom-4 left-4 right-4">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-2">
                                    {% if project.category %}
                                    <span class="px-3 py-1 bg-black/50 backdrop-blur-sm text-white text-sm rounded-full">
                                        {{ project.category.value.replace('_', ' ').title() }}
                                    </span>
                                    {% endif %}
                                    {% if project.featured %}
                                    <span class="px-3 py-1 bg-secondary-500/80 backdrop-blur-sm text-white text-sm rounded-full">
                                        Featured
                                    </span>
                                    {% endif %}
                                </div>
                                <div class="flex items-center space-x-2">
                                    {% if project.status %}
                                    <span class="px-3 py-1 bg-success-500/80 backdrop-blur-sm text-white text-sm rounded-full">
                                        {{ project.status.value.replace('_', ' ').title() }}
                                    </span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <!-- Project Overview -->
                <div class="content-section">
                    <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300">
                        <h2 class="heading-2 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                            Project Overview
                        </h2>
                        <div class="prose-width">
                            <p class="body-text">
                                {{ project.long_description or project.description }}
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Key Features -->
                {% if project.features %}
                <div class="content-section">
                    <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300">
                        <h2 class="heading-2 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            Key Features
                        </h2>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            {% for feature in project.features %}
                            <div class="flex items-start space-x-3 content-block">
                                <div class="w-5 h-5 rounded-full bg-success-100 dark:bg-success-900/30 flex items-center justify-center mt-0.5 flex-shrink-0">
                                    <svg class="w-3 h-3 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                    </svg>
                                </div>
                                <span class="body-text mb-0">{{ feature }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
                {% endif %}

                <!-- Challenges & Solutions -->
                {% if project.challenges %}
                <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300">
                    <h2 class="text-2xl font-bold mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-warning-600 dark:text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                        </svg>
                        Challenges & Solutions
                    </h2>
                    <div class="space-y-4">
                        {% for challenge in project.challenges %}
                        <div class="flex items-start space-x-3 p-4 bg-warning-50 dark:bg-warning-900/20 rounded-lg">
                            <div class="w-5 h-5 rounded-full bg-warning-100 dark:bg-warning-900/30 flex items-center justify-center mt-0.5">
                                <svg class="w-3 h-3 text-warning-600 dark:text-warning-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
                                </svg>
                            </div>
                            <span class="text-muted">{{ challenge }}</span>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
                
                <div class="visual-break"></div>
                
                <!-- Case Study: Problem Statement -->
                {% if project.problem %}
                <div class="content-section">
                    <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300 brand-accent-line">
                        <h2 class="heading-1 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-error-600 dark:text-error-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                            The Problem
                        </h2>
                        <div class="content-block prose-width">
                            <h3 class="heading-3 brand-primary">{{ project.problem.title }}</h3>
                            <p class="body-text">{{ project.problem.description }}</p>
                        </div>
                    
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div class="content-block">
                                <h4 class="heading-4">Key Pain Points</h4>
                                <ul class="list-styled">
                                    {% for pain_point in project.problem.pain_points %}
                                    <li class="flex items-start space-x-3">
                                        <div class="w-5 h-5 rounded-full bg-error-100 dark:bg-error-900/30 flex items-center justify-center mt-0.5 flex-shrink-0">
                                            <svg class="w-3 h-3 text-error-600 dark:text-error-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                                            </svg>
                                        </div>
                                        <span class="body-small mb-0">{{ pain_point }}</span>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                            
                            <div class="content-block">
                                <h4 class="heading-4">Target Users</h4>
                                <ul class="list-styled">
                                    {% for user in project.problem.target_users %}
                                    <li class="flex items-start space-x-3">
                                        <div class="w-5 h-5 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mt-0.5 flex-shrink-0">
                                            <svg class="w-3 h-3 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                            </svg>
                                        </div>
                                        <span class="body-small mb-0">{{ user }}</span>
                                    </li>
                                    {% endfor %}
                                </ul>
                            </div>
                        </div>
                        
                        <div class="callout callout-info">
                            <h4 class="heading-4">Business Impact</h4>
                            <p class="body-text mb-0">{{ project.problem.business_impact }}</p>
                        </div>
                    </div>
                </div>
                {% endif %}
                
                <!-- Case Study: Solution -->
                {% if project.solution %}
                <div class="content-section">
                    <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300 brand-accent-line">
                        <h2 class="heading-1 flex items-center">
                            <svg class="w-6 h-6 mr-3 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                            </svg>
                            The Solution
                        </h2>
                        
                        <div class="content-block prose-width">
                            <h3 class="heading-3 brand-secondary">Approach</h3>
                            <p class="body-text">{{ project.solution.approach }}</p>
                        </div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                        <div>
                            <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Key Decisions</h4>
                            <ul class="space-y-2">
                                {% for decision in project.solution.key_decisions %}
                                <li class="flex items-start space-x-3">
                                    <div class="w-5 h-5 rounded-full bg-success-100 dark:bg-success-900/30 flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    </div>
                                    <span class="text-sm text-muted">{{ decision }}</span>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        
                        <div>
                            <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Implementation Highlights</h4>
                            <ul class="space-y-2">
                                {% for highlight in project.solution.implementation_highlights %}
                                <li class="flex items-start space-x-3">
                                    <div class="w-5 h-5 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mt-0.5">
                                        <svg class="w-3 h-3 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                                        </svg>
                                    </div>
                                    <span class="text-sm text-muted">{{ highlight }}</span>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                    
                    <div class="p-4 bg-success-50 dark:bg-success-900/20 rounded-lg">
                        <h4 class="font-semibold text-success-800 dark:text-success-200 mb-2">Technical Architecture</h4>
                        <p class="text-sm text-success-700 dark:text-success-300">{{ project.solution.architecture }}</p>
                    </div>
                </div>
                {% endif %}
                
                <!-- Case Study: Results & Impact -->
                {% if project.outcome %}
                <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300 brand-accent-line">
                    <h2 class="text-2xl font-bold mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-premium-600 dark:text-premium-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                        </svg>
                        Results & Impact
                    </h2>
                    
                    <div class="mb-6">
                        <p class="text-muted leading-relaxed">{{ project.outcome.summary }}</p>
                    </div>
                    
                    <!-- Key Metrics -->
                    {% if project.outcome.metrics %}
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-6">
                        {% if project.outcome.metrics.performance_improvement %}
                        <div class="bg-brand-gradient-primary p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">Performance</h4>
                            <p class="text-sm">{{ project.outcome.metrics.performance_improvement }}</p>
                        </div>
                        {% endif %}
                        {% if project.outcome.metrics.user_engagement %}
                        <div class="bg-brand-gradient-accent p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">User Engagement</h4>
                            <p class="text-sm">{{ project.outcome.metrics.user_engagement }}</p>
                        </div>
                        {% endif %}
                        {% if project.outcome.metrics.scalability %}
                        <div class="bg-brand-gradient-premium p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">Scalability</h4>
                            <p class="text-sm">{{ project.outcome.metrics.scalability }}</p>
                        </div>
                        {% endif %}
                        {% if project.outcome.metrics.uptime %}
                        <div class="bg-brand-gradient-primary p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">Uptime</h4>
                            <p class="text-sm">{{ project.outcome.metrics.uptime }}</p>
                        </div>
                        {% endif %}
                        {% if project.outcome.metrics.response_time %}
                        <div class="bg-brand-gradient-accent p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">Response Time</h4>
                            <p class="text-sm">{{ project.outcome.metrics.response_time }}</p>
                        </div>
                        {% endif %}
                        {% if project.outcome.metrics.user_satisfaction %}
                        <div class="bg-brand-gradient-premium p-4 rounded-lg text-white">
                            <h4 class="font-semibold text-sm mb-2">User Satisfaction</h4>
                            <p class="text-sm">{{ project.outcome.metrics.user_satisfaction }}</p>
                        </div>
                        {% endif %}
                    </div>
                    {% endif %}
                    
                    <!-- Achievements -->
                    {% if project.outcome.achievements %}
                    <div class="mb-6">
                        <h4 class="font-semibold text-gray-900 dark:text-white mb-3">Key Achievements</h4>
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                            {% for achievement in project.outcome.achievements %}
                            <div class="flex items-start space-x-3">
                                <div class="w-5 h-5 rounded-full bg-premium-100 dark:bg-premium-900/30 flex items-center justify-center mt-0.5">
                                    <svg class="w-3 h-3 text-premium-600 dark:text-premium-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"></path>
                                    </svg>
                                </div>
                                <span class="text-sm text-muted">{{ achievement }}</span>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                    
                    <!-- User Feedback -->
                    {% if project.outcome.user_feedback %}
                    <div class="mb-6">
                        <h4 class="font-semibold text-gray-900 dark:text-white mb-3">User Feedback</h4>
                        <div class="space-y-4">
                            {% for feedback in project.outcome.user_feedback %}
                            <blockquote class="border-l-4 border-primary-500 pl-4 italic text-muted">
                                {{ feedback }}
                            </blockquote>
                            {% endfor %}
                        </div>
                    </div>
                    {% endif %}
                    
                    <!-- Lessons Learned -->
                    {% if project.outcome.lessons_learned %}
                    <div class="p-4 bg-primary-50 dark:bg-primary-900/20 rounded-lg">
                        <h4 class="font-semibold text-primary-800 dark:text-primary-200 mb-3">Lessons Learned</h4>
                        <ul class="space-y-2">
                            {% for lesson in project.outcome.lessons_learned %}
                            <li class="flex items-start space-x-3">
                                <div class="w-5 h-5 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center mt-0.5">
                                    <svg class="w-3 h-3 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                                    </svg>
                                </div>
                                <span class="text-sm text-primary-700 dark:text-primary-300">{{ lesson }}</span>
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endif %}
                </div>
                {% endif %}
                
                <!-- Project Timeline -->
                {% if project.timeline %}
                <div class="card p-8 mb-8 hover:shadow-xl transition-all duration-300 brand-accent-line">
                    <h2 class="text-2xl font-bold mb-6 flex items-center">
                        <svg class="w-6 h-6 mr-3 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Development Timeline
                    </h2>
                    
                    <div class="space-y-6">
                        {% for phase in project.timeline %}
                        <div class="relative">
                            <div class="flex items-start space-x-4">
                                <div class="w-8 h-8 rounded-full bg-secondary-100 dark:bg-secondary-900/30 flex items-center justify-center">
                                    <div class="w-3 h-3 bg-secondary-600 dark:bg-secondary-400 rounded-full"></div>
                                </div>
                                <div class="flex-1">
                                    <div class="flex items-center justify-between mb-2">
                                        <h4 class="font-semibold text-gray-900 dark:text-white">{{ phase.phase }}</h4>
                                        <span class="text-sm text-secondary-600 dark:text-secondary-400 font-medium">{{ phase.duration }}</span>
                                    </div>
                                    
                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                        <div>
                                            <h5 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Activities</h5>
                                            <ul class="space-y-1">
                                                {% for activity in phase.activities %}
                                                <li class="text-sm text-muted">• {{ activity }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                        <div>
                                            <h5 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Deliverables</h5>
                                            <ul class="space-y-1">
                                                {% for deliverable in phase.deliverables %}
                                                <li class="text-sm text-muted">• {{ deliverable }}</li>
                                                {% endfor %}
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            {% if not loop.last %}
                            <div class="absolute left-4 top-8 w-0.5 h-6 bg-secondary-200 dark:bg-secondary-800"></div>
                            {% endif %}
                        </div>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1">
                <!-- Project Info -->
                <div class="card p-6 mb-8 border-l-4 border-primary-500">
                    <h3 class="text-lg font-bold mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        Project Details
                    </h3>
                    <div class="space-y-4">
                        <div class="flex justify-between">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Status:</span>
                            <span class="text-sm text-gray-600 dark:text-gray-400 capitalize">{{ project.status.value.replace('_', ' ') }}</span>
                        </div>
                        {% if project.duration %}
                        <div class="flex justify-between">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Duration:</span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">{{ project.duration }}</span>
                        </div>
                        {% endif %}
                        {% if project.role %}
                        <div class="flex justify-between">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Role:</span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">{{ project.role }}</span>
                        </div>
                        {% endif %}
                        {% if project.created_at %}
                        <div class="flex justify-between">
                            <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Created:</span>
                            <span class="text-sm text-gray-600 dark:text-gray-400">{{ project.created_at.strftime('%B %Y') }}</span>
                        </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Technologies Stack -->
                <div class="card p-6 mb-8 border-l-4 border-secondary-500">
                    <h3 class="text-lg font-bold mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-secondary-600 dark:text-secondary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                        </svg>
                        Tech Stack
                    </h3>
                    <div class="flex flex-wrap gap-2">
                        {% if project.technologies %}
                        {% for tech in project.technologies %}
                        <span class="px-3 py-1 bg-secondary-100 dark:bg-secondary-900/30 text-secondary-700 dark:text-secondary-300 text-xs font-medium rounded-full">
                            {{ tech }}
                        </span>
                        {% endfor %}
                        {% endif %}
                    </div>
                </div>

                <!-- Related Projects -->
                {% if related_projects %}
                <div class="card p-6 border-l-4 border-success-500">
                    <h3 class="text-lg font-bold mb-4 flex items-center">
                        <svg class="w-5 h-5 mr-2 text-success-600 dark:text-success-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                        </svg>
                        Related Projects
                    </h3>
                    <div class="space-y-3">
                        {% for related in related_projects %}
                        <a href="/projects/{{ related.id }}" class="block p-3 border border-gray-200 dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                            <h4 class="font-medium text-gray-900 dark:text-white">{{ related.title }}</h4>
                            <p class="text-sm text-muted">{{ (related.description or '')[:50] }}{% if related.description and related.description|length > 50 %}...{% endif %}</p>
                        </a>
                        {% endfor %}
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% endblock %}