    "primaryLight": {
      "name": "Primary Light",
      "cssVariable": "--color-primary-light",
      "hex": "#E0773F",
      "rgb": [224, 123, 63],
      "usage": "Hover states, subtle backgrounds, highlights"
    },
    "primaryDark": {
      "name": "Primary Dark",
      "cssVariable": "--color-primary-dark",
      "hex": "#9A3C02",
      "rgb": [154, 60, 2],
      "usage": "Active buttons, footer background"
